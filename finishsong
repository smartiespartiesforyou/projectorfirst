  <script>
    const LYRICS = {
      classic: [
        { prompt: "You are my sunshine, my only...", answer: "sunshine." },
        { prompt: "I‚Äôve got sunshine on a...", answer: "cloudy day." },
        { prompt: "Take me home, country...", answer: "roads." },
        { prompt: "You ain't nothin' but a...", answer: "hound dog!" },
        { prompt: "Can't help falling in...", answer: "love with you." },
        { prompt: "Stop! In the name of...", answer: "love." },
        { prompt: "I wanna hold your...", answer: "hand." },
        { prompt: "You are the dancing...", answer: "queen." },
        { prompt: "Hit the road Jack, and don‚Äôt you...", answer: "come back no more!" },
        { prompt: "Somewhere over the...", answer: "rainbow." }
      ],
      holiday: [
        { prompt: "Jingle bells, jingle bells, jingle all...", answer: "the way!" },
        { prompt: "Silent night, holy...", answer: "night." },
        { prompt: "Frosty the snowman was a jolly...", answer: "happy soul." },
        { prompt: "Deck the halls with boughs of...", answer: "holly!" },
        { prompt: "Rudolph the red-nosed...", answer: "reindeer." },
        { prompt: "I‚Äôm dreaming of a...", answer: "white Christmas." },
        { prompt: "We wish you a Merry...", answer: "Christmas!" },
        { prompt: "Joy to the...", answer: "world!" },
        { prompt: "Let it snow, let it...", answer: "snow, let it snow!" },
        { prompt: "Santa Claus is coming...", answer: "to town!" }
      ],
      patriotic: [
        { prompt: "You‚Äôre a grand old...", answer: "flag." },
        { prompt: "My country, ‚Äôtis of...", answer: "thee." },
        { prompt: "God bless...", answer: "America." },
        { prompt: "From the mountains, to the prairies, to the...", answer: "oceans white with foam." },
        { prompt: "Oh say can you see, by the dawn‚Äôs...", answer: "early light." },
        { prompt: "This land is your land, this land is...", answer: "my land." },
        { prompt: "Yankee Doodle went to town, riding on a...", answer: "pony." },
        { prompt: "You‚Äôre a high flying flag that forever in...", answer: "peace may you wave." },
        { prompt: "Stars and stripes forever, let freedom...", answer: "ring!" },
        { prompt: "God bless the USA, where at least I know...", answer: "I‚Äôm free." }
      ]
    };

    const display = document.getElementById("display");
    const themeSel = document.getElementById("theme");
    const rollBtn = document.getElementById("rollBtn");

    function showLyric() {
      const theme = themeSel.value;
      const list = LYRICS[theme];
      const random = Math.floor(Math.random() * list.length);
      const chosen = list[random];

      display.innerHTML = `
        <div>
          <p>${chosen.prompt}</p>
          <button id="showAnswer" class="btn btn-primary mt-6">Show Answer</button>
        </div>
      `;

      document.getElementById("showAnswer").addEventListener("click", () => {
        display.innerHTML = `<p>${chosen.prompt} <strong>${chosen.answer}</strong></p>`;
      });
    }

    rollBtn.addEventListener("click", showLyric);
  </script>
